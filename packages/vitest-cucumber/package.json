{
  "name": "@deepracticex/vitest-cucumber",
  "version": "1.4.0",
  "description": "Runtime API for Cucumber BDD step definitions and hooks",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "prepare": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:dev": "vitest",
    "test:ui": "vitest --ui"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "cucumber",
    "vitest",
    "bdd",
    "testing",
    "integration",
    "gherkin",
    "deepractice",
    "nodespec"
  ],
  "author": "Deepractice",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Deepractice/EnhancedVitest",
    "directory": "packages/vitest-cucumber"
  },
  "peerDependencies": {
    "vitest": "^2.0.0 || ^3.0.0"
  },
  "dependencies": {
    "@deepracticex/vitest-cucumber-plugin": "workspace:*"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@types/node": "^22.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.7.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  }
}
